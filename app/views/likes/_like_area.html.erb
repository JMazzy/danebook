<div class="like">
  
  <% if likeable.liked?(current_user) %>

    <%= link_to "Unlike", like_path( likeable.user_like(current_user) ), method: :delete, remote: true %>

  <% else %>

    <%= link_to "Like", likes_path( likeable_type: likeable.class.to_s, likeable_id: likeable.id), method: :post, remote: true %>

  <% end %>

</div>

<div class="like-count">

  <% if likeable.likes.any? %>

    <p><%= like_phrase(likeable.likes) %></p>

  <% end %>

</div>
