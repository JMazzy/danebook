<%= render partial: 'layouts/tabs', locals: { user: @user } %>

<!-- The Timeline Section -->
<div class="row"> <!--row containing all timeline content-->
  <section class="col-md-3"> <!--left column-->
      <%= render partial: "about" %>

      <%= render partial: "photos" %>

      <%= render partial: "friends" %>

  </section> <!--end left column-->

  <section class="col-md-9 content-column"> <!--right column-->

    <%= render partial: "posts/form" if @user == current_user %>

    <!--List of Posts-->

    <% @user.posts.each do |post| %>

      <%= render partial: "posts/view", locals: { post: post } %>

    <% end %>

  </section> <!--end right column-->
</div> <!--end row containing all timeline content-->
