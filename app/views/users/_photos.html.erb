<!-- Photo Section -->
<section class="row post-box">
  <article class="col-md-12">
    <h3>Photos (<%= @user.photos.count %>)</h3>
    <section class="row">
      <% @user.photos.each do |photo| %>
        <section class="col-xs-4 thumbnail" >
          <%= link_to (image_tag photo.image.url(:thumb) ), photo_path(photo) %>
        </section>
      <% end %>
    </section>

    <!-- The "See More" link -->
    <section class="row">
      <section class="col-xs-12 bottom-link-text">
      <%= link_to "See More Photos", photos_path(user_id: @user.id) %>
      </section>
    </section>

  </article>
</section>
