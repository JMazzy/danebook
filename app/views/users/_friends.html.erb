<!-- Friends Section -->
<section class="row post-box">
  <article class="col-md-12">
    <h3>Friends (<%= @user.friends.count(:email) %>)</h3>
    <section class="row">
      <% @user.friends.limit(6).each do |friend| %>
        <section class="col-xs-4 thumbnail">
          <%= image_tag "user_silhouette_generic.png", width:75, height:75 %>
          <%= link_to friend.full_name, user_path(friend) %>
        </section>
      <% end %>
    </section>
    <section class="row">
      <section class="col-xs-12 bottom-link-text">
        <a href="#">See More Friends</a>
      </section>
    </section>
  </article>
</section>
