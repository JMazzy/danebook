

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h3 class="text-center">Paste a URL to a photo on the web...</h3>

    <%= form_for @photo do |f| %>
      <div class="form-group">
        <%= f.url_field :image, placeholder: "http://www.example.com/image.png", value: "", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit Photo URL", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <h3 class="text-center">or...</h3>

    <h3 class="text-center">Select a photo from your hard drive...</h3>

    <%= form_for @photo do |f| %>
      <div class="form-group">
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Upload Photo", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

  </div>
</div>
